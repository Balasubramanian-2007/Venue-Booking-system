<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Department Selection</title>
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <section id="departments" class="container py-5">
    <h2 class="text-center mb-4">Explore Departments</h2>
    <div class="row g-4 justify-content-center">
      
        <% const departments = [
        { name: "S&H", code: "sh", icon: "bi-building" },
        { name: "IT", code: "it", icon: "bi-laptop" },
        { name: "CSE", code: "cse", icon: "bi-cpu" },
        { name: "ECE", code: "ece", icon: "bi-broadcast" },
        { name: "EEE", code: "eee", icon: "bi-lightning-charge" },
        { name: "AIDS", code: "aids", icon: "bi-diagram-3" },
        { name: "CIVIL", code: "civil", icon: "bi-cone-striped" },
        { name: "Auditorium", code: "auditorium", icon: "bi-mic" },
        { name: "Placement Block", code: "placement", icon: "bi-briefcase" }
      ]; %>
      
  
      <% departments.forEach(dept => { %>
        <div class="col-6 col-md-4 col-lg-3">
          <a href="/department/<%= dept.code %>" class="text-decoration-none">
            <div class="card text-center shadow-sm dept-card">
                <div class="card-body">
                    <i class="<%= dept.icon %> fs-2 text-primary"></i>
                    <h5 class="card-title fw-bold mt-2"><%= dept.name %></h5>
                  </div>
                  
            </div>
          </a>
        </div>
      <% }); %>
    </div>
  </section>
    <div class="container d-flex flex-column justify-content-center align-items-center vh-100">
        <div class="bg-white shadow rounded p-5" style="max-width: 400px; width: 100%;">
            <h2 class="text-center mb-4">Select Your Department</h2>
            <form action="/department" method="POST">
                <div class="mb-3">
                    <label for="deptChoice" class="form-label">Choose Department:</label>
                    <select name="deptChoice" id="deptChoice" class="form-select" required>
                        <option value="" selected disabled>-- Select --</option>
                        <option value="SH">S & H</option>
                        <option value="IT">IT</option>
                        <option value="CSE">CSE</option>
                        <option value="AIDS">AI&DS</option>
                        <option value="ECE">ECE</option>
                        <option value="EEE">EEE</option>
                        <option value="Civil">CIVIL</option>
                        <option value="Mech">MECH</option>
                    </select>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Proceed</button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
